def main():
    print("Welcome to the Python Programming Learning Program!")
    print("Let's get started...\n")

    # Variables and Basic Input/Output
    name = input("What's your name? ")
    print(f"Hello, {name}!\n")

    # Conditionals
    age = int(input("How old are you? "))
    if age < 18:
        print("You are a minor.")
    else:
        print("You are an adult.\n")

    # Loops
    print("Let's count from 1 to 10:")
    for i in range(1, 11):
        print(i, end=" ")
    print("\n")

    # Functions
    def greet(person):
        return f"Hello, {person}!"

    friend_name = input("Enter your friend's name: ")
    greeting = greet(friend_name)
    print(greeting)

    print("\nCongratulations! You've completed the Python Programming Learning Program.")

if __name__ == "__main__":
    main()
